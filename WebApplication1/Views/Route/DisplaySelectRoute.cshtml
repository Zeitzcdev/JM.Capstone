@model WebApplication1.ViewModels.SaveFavoriteRouteViewModel

@{
}
<div class="row">
    <div class="col-2 menu">
        <form asp-controller="Route" asp-action="SaveFavoriteRoute" method="post">
            <input id="two" type="button" value="Find Routes" onclick="location.href='@Url.Action("Index", "Route")'" />
            <input type="hidden" asp-for="UserID" value="@ViewBag.UserID" />
            <input type="hidden" asp-for="RouteID" value="@ViewBag.RouteID" />
            <input id="two" type="submit" value="Save Route/Favorite" onclick="location.href='@Url.Action("SaveFavoriteRoute", "Route")'" />
        </form>
    </div>
    <div class="col-1">

    </div>
    <div class="welcomeClass">
        <div class="col-6">
            
            @if (ViewBag.ApiKey != null)
            {
                <iframe width="580" height="420" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/directions?origin=@ViewBag.Origin
                    &waypoints=@ViewBag.Waypoints
                    &destination=@ViewBag.Destination
                    &key=@Uri.EscapeDataString(ViewBag.ApiKey)"></iframe>

            }

        </div>

        <div class="col-3">

        </div>
    </div>
</div>

<div class="row">
    <div class="col-3 menu">
    </div>


    <div class="col-6">
        <p>@ViewBag.Review</p>
    </div>
    <div class="col-3">
    </div>
</div>
<br />